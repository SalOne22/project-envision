{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-duplicate-imports": "error",
    "eqeqeq": "error",
    "no-magic-numbers": [
      "error",
      {
        "ignore": [0, 1, 100],
        "ignoreArrayIndexes": true,
        "ignoreDefaultValues": true
      }
    ]
  }
}
